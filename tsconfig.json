{
  "compilerOptions": {
    "module": "es2015",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "rootDir": "src",
    "outDir": "./built",
    "allowJs": true,
    // "outFile": "./built/app.js",
    "sourceMap": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "built/**/*",
    "**/*.spec.ts"
  ]
}